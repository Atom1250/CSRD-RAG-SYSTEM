# CSRD RAG System Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="CSRD RAG System"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/csrd_rag
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Vector Database Configuration
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment

# AI Model Configuration
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# File Storage Configuration
UPLOAD_DIRECTORY=./data/documents
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["pdf", "docx", "txt"]

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=1000

# Schema Configuration
SCHEMA_DIRECTORY=./data/schemas
SUPPORTED_SCHEMAS=["EU_ESRS_CSRD", "UK_SRD"]

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2